-- project file used to create the release executable of ada roguelike
project Release is
   for Languages use ("ada", "c");

   for Source_Dirs use ("src",
      "src/win",
      "src/console");

   for Object_Dir use "obj";
   for Exec_Dir use ".";
   for Main use ("main.adb");

   package Builder is
      for Executable ("main.adb") use "ada_roguelike";
   end Builder;
end Release;
